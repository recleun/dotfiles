# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    font pango:CaskaydiaMonoNerdFont Bold 10
    status_command i3status
    colors {
        background #1F1F28
        statusline #C8C093
        separator #C8C093

        focused_workspace  #C8C093 #1F1F28 #ffffff
        active_workspace   #1F1F28 #1F1F28 #ffffff
        inactive_workspace #1F1F28 #1F1F28 #888888
        urgent_workspace   #C8C093 #C8C093 #ffffff
        binding_mode       #C8C093 #C8C093 #ffffff
    }
}
