# disable mouse acceleration
exec --no-startup-id xinput --set-prop 9 'libinput Accel Profile Enabled' 0, 1

# set background color
exec xsetroot -solid "#1F1F28"

# set background image
exec --no-startup-id feh --bg-scale ~/media/img/backgrounds/dark-sky.png

# set brightness to 1%
exec --no-startup-id brightnessctl set 1%

# set keyboard layout to english/arabic using win+space to toggle
exec --no-startup-id setxkbmap -layout us,eg -option grp:win_space_toggle

# remove the mouse icon when its not used
exec --no-startup-id unclutter

# autostart apps
exec --no-startup-id firefox
exec --no-startup-id discord
exec --no-startup-id greenclip clear
exec --no-startup-id greenclip daemon > /dev/null
# exec --no-startup-id spotify
exec --no-startup-id flameshot
