# refreshes i3status when called
set $refresh_i3status killall -SIGUSR1 i3status

# controls the volume
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +2% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -2% && $refresh_i3status

# mutes the audio
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status

# mutes the mic
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# controls the screen brightness
bindsym XF86MonBrightnessUp exec --no-startup-id bright Up
bindsym XF86MonBrightnessDown exec --no-startup-id bright Down

bindsym $mod+plus exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym $mod+minus exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status

# use mod+mouse to move windows around (don't get used to this)
floating_modifier $mod

# move tiling windows via drag & drop by left-clicking into the title bar,
# or left-clicking anywhere into the window while holding the floating modifier.
tiling_drag modifier titlebar

# run kitty terminal
bindsym $mod+Return exec kitty

# kill the active program 
bindsym $mod+c kill

# program launcher
bindsym $mod+q exec --no-startup-id rofi -show drun
# web browser
bindsym $mod+w exec --no-startup-id firefox
# clipboard history
bindsym $mod+v exec --no-startup-id rofi -modi "clipboard:greenclip print" -show clipboard
# screenshot program
bindsym Print exec flameshot gui
# emoji picker
bindsym $mod+period exec rofimoji
# pause, next, previous on spotify
bindsym $mod+p exec playerctl -p spotify play-pause
bindsym $mod+bracketright exec playerctl -p spotify next
bindsym $mod+bracketleft exec playerctl -p spotify previous
# close all notifications (a favourite for mouse haters)
bindsym $mod+n exec dunstctl close-all

# move your focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move the window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# fullscreen into the active window
bindsym $mod+f fullscreen toggle

# turns windows into tabs
bindsym $mod+e layout tabbed
# turns windows into split-screen mode/change direction vertically/horizontally
bindsym $mod+m layout toggle split

# make the window float
bindsym $mod+Shift+space floating toggle

# change focus between tiling/floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# sets a name for workspaces 0-10
set $ws0 "0"
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# bind mod+number to switch to a workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# bind a magic workspace (number 0, almost always empty)
bindsym $mod+d workspace number $ws0

# move a window to a workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace
bindsym $mod+Shift+r restart
# exit i3
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"
