general {
    colors = true
    interval = 5
}

order += "disk /"
order += "cpu_usage"
order += "cpu_temperature all"
order += "memory"
order += "volume master"
order += "wireless _first_"
order += "battery 0"
order += "tztime local"

wireless _first_ {
        format_up = "%essid"
        format_down = "WiFi: DOWN"
}

ethernet _first_ {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

disk "/" {
        format = "DISK: %used / %total"
}

cpu_usage {
        format = "CPU: %usage"
}

cpu_temperature all {
        format = "CPU-T: %degreesÂ°C"
        max_threshold = 80
}

memory {
        format = "MEM: %used / %total"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
        format = "%d-%m-%y %I:%M %p"
}

volume master {
        format = "VOL: %volume"
        format_muted = "VOL: MUTE"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

battery 0 {
    format = "FUEL: %percentage (%remaining)"
    integer_battery_capacity = true
    threshold_type = "percentage"
    low_threshold = 20
    last_full_capacity = true
}
